###*
 * eastwood.js - <%= app %>
###
app = { env : "<%= env %>", routes : { } }

###*
 * Exports
###
app.exports =
<% exports.each do |key, value| %>
  <%= key.to_s %> : <%= value.is_a?( String ) ? "'#{value}'" : value %>
<% end %>

###*
 * Routes
###
<% routes.each do |key, route| %>
app.routes.<%= route.coffee_name %> = ( <%= route.coffee_args %> ) ->
  "<%= route.coffee_path %>"
<% end %>

###*
 * Hashes
###
<% hashes.each do |key, route| %>
app.routes.<%= route.coffee_name %> = ( <%= route.coffee_args %> ) ->
  "<%= route.coffee_path %>"
<% end %>

###*
 * Export
###
<%= target %>.<%= app %> = app
